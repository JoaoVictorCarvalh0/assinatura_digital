// Prisma schema para Assinador Digital Web
// Banco: SQLite

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  password   String
  publicKey  String
  privateKey String
  signatures Signature[]
}

model Signature {
  id        String   @id @default(uuid())
  text      String
  hash      String
  signature String
  algorithm String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  logs      Log[]
}

model Log {
  id          Int       @id @default(autoincrement())
  signatureId String
  signature   Signature @relation(fields: [signatureId], references: [id])
  verifiedAt  DateTime  @default(now())
  status      String
  verifierIp  String?
}
